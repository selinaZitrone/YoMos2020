FROM rocker/binder:3.6.3
LABEL maintainer='Selina und Sebastian'
USER root
COPY . ${HOME}
RUN chown -R ${NB_USER} ${HOME}
USER ${NB_USER}



RUN wget https://github.com/selinaZitrone/YoMos2020/raw/master/DESCRIPTION && R -e "options(repos = list(CRAN = 'http://mran.revolutionanalytics.com/snapshot/2020-05-22/')); devtools::install_deps()"

RUN rm DESCRIPTION.1; exit 0
